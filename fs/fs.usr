c---------------------------------------------------------------------
      subroutine gen_pert_ic ! perturbation i.c.s
      include 'SIZE'
      include 'TOTAL'

      common /fsos_usr/ rhol, rhog, mul, mug,
     $                  f1acc, f2acc, gacc, sigma_sf
      real rhol, rhog, mul, mug, f1acc, f2acc, gacc, sigma_sf

      common /fsparam/ eps,alpha,gamma_r,gamma_i
      common /fsarray/ ub(lx1,ly1,lz1,lelt),vb(lx1,ly1,lz1,lelt)
      real eps, alpha, gamma_r, gamma_i
      real ub, vb
      common /scrns/ ur(ly1,100),ui(ly1,100),vr(ly1,100),vi(ly1,100)
      real ur, ui, vr, vi
      common /scruz/ wk(ly1,100)
      real wk
      
      common /fstemp/ temp_ic(lx1,ly1,lz1,lelv,2)
      real temp_ic

      real Ul1, Ul2, Ug1, Ug2, fsr, fsi, h_local, epsamp, disp
      real temp, ax
      real x, y, ubase, c, s
      real heaviside
      integer e,eg,ex,ey,ez, nelx, nely, nelz,m,i,j,k,n

      nelx = 60  ! must match .rea file
      nely = 20
      nelz = 1

      eps = 1e-4

      call rzero(ur,ly1*100)
      call rzero(ui,ly1*100)
      call rzero(vr,ly1*100)
      call rzero(vi,ly1*100)

      m = ny1*nely
      if (nid.eq.0) then
         open(unit=98,file='u2.txt')
         read(98,*) rhol, rhog, mul, mug
         read(98,*) f1acc, f2acc, gacc, sigma_sf
         read(98,*) alpha
         read(98,*) gamma_r, gamma_i
         read(98,*) fsr, fsi
         read(98,*) Ul1, Ul2
         read(98,*) Ug1, Ug2
         do i=1,m
            read(98,*) ur(i,1),ui(i,1),vr(i,1),vi(i,1)
         enddo
         close(98)
      else
         rhol = 0.0
         rhog = 0.0
         mul = 0.0
         mug = 0.0
         f1acc = 0.0
         f2acc = 0.0
         gacc = 0.0
         sigma_sf = 0.0
         alpha = 0.0
         gamma_r = 0.0
         gamma_i = 0.0
         fsr = 0.0
         fsi = 0.0
         Ul1 = 0.0
         Ul2 = 0.0
         Ug1 = 0.0
         Ug2 = 0.0
      endif

      call gop ( ur , wk , '+  ', m ) ! gather over all procs
      call gop ( ui , wk , '+  ', m )
      call gop ( vr , wk , '+  ', m )
      call gop ( vi , wk , '+  ', m )
      call gop ( rhol , wk , '+  ', 1 )
      call gop ( rhog , wk , '+  ', 1 )
      call gop ( mul , wk , '+  ', 1 )
      call gop ( mug , wk , '+  ', 1 )
      call gop ( f1acc , wk , '+  ', 1 )
      call gop ( f2acc , wk , '+  ', 1 )
      call gop ( gacc , wk , '+  ', 1 )
      call gop ( sigma_sf , wk , '+  ', 1 )
      call gop ( alpha , wk , '+  ', 1 )
      call gop ( gamma_r , wk , '+  ', 1 )
      call gop ( gamma_i , wk , '+  ', 1 )
      call gop ( fsr , wk , '+  ', 1 )
      call gop ( fsi , wk , '+  ', 1 )
      call gop ( Ul1 , wk , '+  ', 1 )
      call gop ( Ul2 , wk , '+  ', 1 )
      call gop ( Ug1 , wk , '+  ', 1 )
      call gop ( Ug2 , wk , '+  ', 1 )

      n = nx1*ny1*nz1*nelv

      epsamp = eps*exp(gamma_r*time)

      do e=1,nelv
      do j=1,ny1
      do i=1,nx1
         x  = xm1(i,j,1,e)
         y  = ym1(i,j,1,e)
         ax = alpha*x + gamma_i*time
         c  = cos(ax)
         s  = sin(ax)
         eg = lglel(e)

         disp = fsr*cos(ax) - fsi*sin(ax)

         ! Level-set initialization
         do k=1,2
           h_local = epsamp*disp
           temp = h_local - y
           if (k.eq.1) then
              temp = heaviside(i,j,1,e,temp,0.0)
           endif
           temp_ic(i,j,1,e,k) = temp
         enddo

         ! Velocity initialization
         call get_exyz(ex,ey,ez,eg,nelx,nely,nelz)
         ub(i,j,1,e) = epsamp*(ur(j,ey)*c - ui(j,ey)*s)
         vb(i,j,1,e) = epsamp*(vr(j,ey)*c - vi(j,ey)*s)
         if (ey.le.nely/2.0) then
           ubase = 1.0 + Ul1*y + Ul2*y*y
         else
           ubase = 1.0 + Ug1*y + Ug2*y*y
         endif
         ub(i,j,1,e) = ub(i,j,1,e) + ubase
      enddo
      enddo
      enddo

      return
      end
