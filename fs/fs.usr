      subroutine uservp(ix,iy,iz,eg) ! set variable properties
      implicit none
      integer ix,iy,iz,eg,e
     
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      common /ls_usr/ ifld_cls,ifld_clsr,
     $                ifld_tls,ifld_tlsr 
      integer ifld_cls,ifld_clsr
      integer ifld_tls,ifld_tlsr

      common /fsos_usr/ rhol, rhog, mul, mug,
     $                  f1acc, f2acc, gacc, sigma_sf
      real rhol, rhog, mul, mug, f1acc, f2acc, gacc, sigma_sf

      real psi, evm_getvisc
      real Re

      integer icalld
      save icalld
      data icalld /0/

      e = gllel(eg)

!     These routine is not called by external solver
!     To Do: change the flow, so that this routine is called
!     similar to RANS. Will avoid confusion

      Re = rhol/mul

      if(ifield.eq.1)then
        psi = t(ix,iy,iz,e,ifld_cls-1)
        psi = max(0.0,psi)
        psi = min(1.0,psi)
        utrans = ((1.0-psi)*rhog + psi*rhol)/rhol
        udiff = ((1.0-psi)*mug + psi*mul)/mul/Re
        utrans = ((1.0-psi)*rhog + psi*rhol)
        udiff = ((1.0-psi)*mug + psi*mul)

        if(istep.le.2)then
          vtrans0(ix,iy,iz,e) = utrans
        else
          vtrans0(ix,iy,iz,e) = rhog/rhol
        endif
      else
        utrans = 1.0
        udiff = 1e-10
        if(ifavm(ifield-1))then
          udiff = 1e-10       !must be tiny for hyperbolic
        elseif(ifsvv(ifield-1))then
          udiff = 1e-10      !must be tiny for hyperbolic
        endif
      endif

      return
      end
c-----------------------------------------------------------------------
      subroutine userf(ix,iy,iz,eg) ! set acceleration term
      implicit none
      integer ix,iy,iz,eg,e

      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      common /ls_usr/ ifld_cls,ifld_clsr,
     $                ifld_tls,ifld_tlsr 
      integer ifld_cls,ifld_clsr
      integer ifld_tls,ifld_tlsr

      common /fsos_usr/ rhol, rhog, mul, mug,
     $                  f1acc, f2acc, gacc, sigma_sf
      real rhol, rhog, mul, mug, f1acc, f2acc, gacc, sigma_sf

      real sfx,sfy,sfz
      real svvx,svvy,svvz
      real psi, fgrav, fflow, facc


      e = gllel(eg)

      sfx = 0.0
      sfy = 0.0
      sfz = 0.0
      svvx = 0.0
      svvy = 0.0
      svvz = 0.0

      call surfacetension(ix,iy,iz,e,sigma_sf,sfx,sfy,sfz)
      call svv_fluid(ix,iy,iz,e,svvx,svvy,svvz)

      psi = t(ix,iy,iz,e,ifld_cls-1)

      facc = psi*f1acc + (1.0-psi)*f2acc
      fgrav = vtrans(ix,iy,iz,e,1)*gacc
      fflow = vtrans(ix,iy,iz,e,1)*facc

      ! implicit
      ffx = svvx 
      ffy = svvy 
      ffz = svvz
      abfx(ix,iy,iz,e) = sfx + fflow
      abfy(ix,iy,iz,e) = sfy - fgrav
      abfz(ix,iy,iz,e) = sfz

      ! explicit
      sfx = sfx/vtrans(ix,iy,iz,e,1)
      sfy = sfy/vtrans(ix,iy,iz,e,1)
      sfz = sfz/vtrans(ix,iy,iz,e,1)
      ffx = sfx + svvx + fflow/vtrans(ix,iy,iz,e,1)
      ffy = sfy + svvy - fgrav/vtrans(ix,iy,iz,e,1)
      ffz = sfz + svvz
      abfx(ix,iy,iz,e) = 0.0
      abfy(ix,iy,iz,e) = 0.0
      abfz(ix,iy,iz,e) = 0.0

      return
      end
