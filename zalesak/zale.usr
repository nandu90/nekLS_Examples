      subroutine useric(ix,iy,iz,eg) ! set up initial conditions
      implicit none
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'
      
      integer ix,iy,iz,eg,e
      real rcen(5,5)

      real thet,ucx,ucy,x1,y1,xlim,ylim
      real distx,disty,dist

      logical in_slot, below_slot, in_disk

      real heaviside
      real eps 

      e = gllel(eg)

      ucx = 0.5
      ucy = 0.5

      ux = (PI)*(ucy-ym1(ix,iy,iz,e))
      uy = (PI)*(xm1(ix,iy,iz,e)-ucx)
      uz = 0.0

      x1 = 0.5d0
      y1 = 0.75d0

      x = xm1(ix,iy,iz,e)
      y = ym1(ix,iy,iz,e)

      dist = sqrt((x-x1)**2.+(y-y1)**2.)-0.15d0

      in_slot = (abs(x-x1) < 0.025d0)
      below_slot = (y < 0.85d0)
      in_disk = (dist < 0.0d0)
      distx = 0.025d0 - abs(x - 0.5d0)
      disty = 0.85d0 - y
      
      temp = dist

      temp = max(dist,min(distx,disty))

      eps = 1.0/(lx1-1)

      temp = heaviside(ix,iy,iz,e,-temp,eps)
      
      return
      end
