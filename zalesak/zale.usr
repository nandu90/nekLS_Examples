      subroutine userchk()
      implicit none

      include 'SIZE'
      include 'TOTAL'
      real pta(3),ptb(3)
      real err

      real ls_shapeerr,ls_volerr,ls_relerr
      real ls_l1norm
      real enclosedVol
      integer ifld
      real ls_rel2err

      if(istep.eq.nsteps .or. istep.eq.20000)then
        pta(1) = 0.0
        pta(2) = 0.75
        pta(3) = 0.0
        ptb(1) = 1.0
        ptb(2) = 0.75
        ptb(3) = 0.0
        call lineplot(pta,ptb,1001)

        do ifld = 3,4
          err = ls_l1norm(ifld,t(1,1,1,1,1))
          if(nio.eq.0) write(*,*)"ifield, L1 error",ifld,err

          err = ls_shapeerr(ifld,t(1,1,1,1,1))
          if(nio.eq.0) write(*,*)"ifield, Shape error",ifld,err

          err = ls_volerr(ifld,t(1,1,1,1,1),t(1,1,1,1,1))
          if(nio.eq.0) write(*,*)"ifield, Volume error",ifld,err

          err = ls_relerr(ifld,t(1,1,1,1,1)) 
          if(nio.eq.0) write(*,*)"ifield, Relative error",ifld,err

          err = ls_rel2err(ifld,t(1,1,1,1,1)) 
          if(nio.eq.0) write(*,*)"ifield, Relative L2 error",ifld,err
        enddo
      endif

      return
      end
